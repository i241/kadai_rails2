<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ルーム検索
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @inns.each do |inn| %>
        <div class="column is-one-quarter">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to inn_path(inn) do %>
                  <%= attachment_image_tag inn, :image, fallback: "no-image.png"%>
                <% end %>
              </figure>
            </div>
            <div class="madia-content">
              <%= link_to user_path(inn.user.id) do %>
                <div class="title is-4">投稿者:<%= inn.user.username %></div>
              <% end %>
            </div>
            <div class="content">
              <p class="subtitle mb-0"><%= inn.address %></p>
              <p class="has-text-right mb-3">¥<%= inn.price %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
