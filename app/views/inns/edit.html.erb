<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ルーム情報編集
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @inn do |f| %>
          <div class="field">
            <%= f.label :title, "ルーム名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>
          <div class="field">
            <%= f.label :body, "ルーム紹介", class: "label" %>
            <%= f.text_area :body, class: "input" %>
          </div>
          <div class="field">
            <%= f.label :price, "料金", class: "label" %>
            <%= f.text_field :price, class: "input" %>
          </div>
          <div class="field">
            <%= f.label :address, "住所", class: "label" %>
            <%= f.text_field :address, class: "input" %>
          </div>
          <div class="field">
            <%= f.label :image, "ルーム画像", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>
          <%= f.submit "更新", class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
