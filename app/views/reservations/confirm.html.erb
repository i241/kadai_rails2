<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        予約確認
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6 card">
        <div class="field">
          <p class="mb-4">開始日</p>
          <p class="card has-background-grey-lighter p-3"><%= @reservation.start_date.to_s(:datetime_jp) %></p>
        </div>
        <div class="field">
          <p class="mb-4 ">終了日</p>
          <p class="card has-background-grey-lighter p-3"><%= @reservation.end_date.to_s(:datetime_jp) %></p>
        </div>
        <div class="field">
          <p class="mb-4">人数</p>
          <p class="card has-background-grey-lighter p-3"><%= @reservation.people %>人</p>
        </div>
        <div class="field">
          <p class="mb-4">日数</p>
          <p class="card has-background-grey-lighter p-3">
            <%= @reservation.many_days = ( @reservation.end_date.to_i - @reservation.start_date.to_i ) / 86400 %>日
          </p>
        </div>
        <div class="field">
          <p class="mb-4">合計金額</p>
          <p class="card has-background-grey-lighter p-3">
            <%= @reservation.total_price = @reservation.total_price * @reservation.people * ( @reservation.end_date.to_i - @reservation.start_date.to_i ) / 86400  %>
          </p>
        </div>
        <div class="field">
          <%= form_for @reservation do |f| %>
            <%= f.hidden_field :start_date %>
            <%= f.hidden_field :end_date %>
            <%= f.hidden_field :people %>
            <%= f.hidden_field :many_days %>
            <%= f.hidden_field :total_price %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :room_id %>
            <%= f.submit "予約を確定する", class: "button is-success" %>
          <% end %> 
        </div>
    </div>
  </div>
</section>  


  

